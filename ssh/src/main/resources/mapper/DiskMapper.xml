<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kaishengit.mapper.DiskMapper">
    <insert id="save">
        insert into t_disk(name,source_name,fid,size,create_time,create_user,type)
        VALUES
        (#{name},#{sourceName},#{fid},#{size},#{createTime},#{createUser},#{type})
    </insert>
    <select id="findByFid" resultType="com.kaishengit.pojo.Disk">
        SELECT * FROM t_disk WHERE fid = #{fid}
    </select>
</mapper>